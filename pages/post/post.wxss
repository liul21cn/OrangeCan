/* pages/post/post.wxss */
swiper{
  widows: 100%;
  height: 600rpx;
}

swiper image{
  widows: 100%;
  height: 600rpx;
}

.post-container{
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #cdcdcd;
  border-top:  1px solid #cdcdcd;
  padding-bottom: 5px;
}

/* post 作者详细 */
.post-author-date{  
  flex-direction: row;
  display: flex;
  margin: 10rpx 0 20rpx 10px;
  align-items: center;
}

.post-author-date image{  
  width: 60rpx;
  height: 60rpx; 
}

.post-author-date text{  
  margin-left: 20px;
}

.post-image{  
  width: 100%;
  height: 340rpx; 
  margin-bottom: 15px;
}

.post-date{  
  font-size: 26rpx;
  margin-bottom: 10px;
}

.post-title{
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;  
  margin-left: 10px;
}

.post-content{
  font-size: 26rpx;  
  color: #666;
  margin-bottom: 20px;  
  margin-left: 20px;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  display: flex;
  flex-direction: row;  
  font-size: 13px;     
  margin-left: 10px;  
  line-height: 16rpx;
  align-items: center;
}

.post-like image{
  width: 16px;
  height: 16px; 
  margin-right: 8px;
}

.post-like text{
  margin-right: 20px;
}





