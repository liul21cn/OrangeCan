<!--pages/post/post.wxml-->
<view>
  <swiper indicator-dots="true" autoplay="true" interval="5000">
    <swiper-item>
      <image src="/images/post/post-1@text.jpg"  model="aspectFit" style="width: {{imageWidth}}px;" bindload="imageLoad" />
    </swiper-item>
     <swiper-item>
      <image src="/images/post/post-2@text.jpg" style="width: {{imageWidth}}px;" bindload="imageLoad" />
    </swiper-item>
     <swiper-item>
      <image src="/images/post/post-3@text.jpg"  style="width: {{imageWidth}}px;" bindload="imageLoad" />
    </swiper-item>
  </swiper>
</view>

<!-- 文章列表 -->
<block wx:for="{{postList}}" wx:key="key" wx:for-item="item" wx:for-index="idx" >
  <view class="post-container">
    <view class="post-author-date">
      <image src="{{item.aratar}}" />
      <text>{{item.date}}</text>
    </view>
    <text class="post-title">{{item.title}}</text>
    <image class="post-image" src="{{item.postImg}}" mode="aspectFill" />
    <text class="post-content"> {{item.content}}</text>
    <view class="post-like">
      <image src="/images/icon/wx_app_collect.png" />
      <text>{{item.collectionNum}}</text>
      <image src="/images/icon/wx_app_view.png" />
      <text>{{item.readingNum}}</text>
      <image src="/images/icon/wx_app_message.png" />
      <text>{{item.commentNum}}</text>    
    </view>
  </view>
</block>   


